{
    "name": "agashe/sigmaphp-core",
    "description": "SigmaPHP Framework Core Components",
	"keywords": ["SigmaPHP", "framework"],
    "type": "library",
	"license": "MIT",
    "autoload": {
        "psr-4": {
            "SigmaPHP\\Core\\": "src/"
        },
        "files": [
            "src/Helpers/helper_methods.php"
        ]
    },
    "authors": [
        {
            "name": "Mohamed Yousef",
            "email": "engineer.mohamed.yossef@gmail.com"
        }
    ],
    "require": {
        "agashe/sigmaphp-db": "0.1.*",
        "agashe/sigmaphp-router": "0.1.*",
        "agashe/passgen": "1.*",
        "jenssegers/blade": "1.*",
        "vlucas/phpdotenv": "^5.4",
        "larapack/dd": "1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": [
            "Composer\\Config::disableProcessTimeout",
            "mkdir config",
            "cp tests/Models/database.config.php config/database.php",
            "./vendor/bin/phpunit tests/",
            "rm -rf config/"
        ]
    }
}
